<div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <LinkTo @route="lancamentos/new" class="btn btn-success">Novo lançamento</LinkTo>
    </div>
  </div>
</div>
<table class="table table-stripped">
  <thead>
    <th>Tipo</th>
    <th>Valor</th>
    <th>Descrição</th>
    <th>Natureza</th>
    <th colspan="2"></th>
  </thead>
  <tbody>
    {{#each this.model as |lancamento|}}
      <tr>
        <td>{{lancamento.nome}}</td>
        <td>{{lancamento.descricao}}</td>
        <td>
          <LinkTo @route="lancamentos/edit" @model={{lancamento}} class="btn btn-primary">Editar</LinkTo>
          <button type="submit" class="btn btn-primary" {{on "click" (fn this.delete lancamento)}}>Excluir</button>
        </td>
      </tr>
    {{else}}
      <tr><td collspan="5">{{this.loading}}</td></tr>
    {{/each}}
  </tbody>
</table>
