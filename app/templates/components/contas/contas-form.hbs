<div class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 control-label">Tipo:</label>
    <div class="col-sm-6">
      <Input @type="text" @value={{@model.tipo}} class="form-control" placeholder="Tipo" />
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Nome:</label>
    <div class="col-sm-6">
      <Input @type="text" @value={{@model.nome}} class="form-control" placeholder="Nome" />
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Saldo:</label>
    <div class="col-sm-6">
      <Input @type="text" @value={{@model.saldo}} class="form-control" placeholder="Saldo" />
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      {{!- TODO: Do not use `action` as. Instead, use the `on` modifier and `fn` -}}
      {{!- TODO: helper.ember-template-lint -}}
      <button type="submit" class="btn btn-success" {{on "click" (fn this.save @model @redirectTo)}}>Salvar</button>
    </div>
  </div>
</div>
