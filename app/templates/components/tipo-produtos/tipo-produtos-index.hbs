<div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <LinkTo @route="tipo_produtos/new" class="btn btn-success">Novo tipo produto</LinkTo>
    </div>
  </div>
</div>
<div class="form-group">
  <div class="col-sm-offset-2 col-sm-10">
    <label for="order">Ordem:</label>
    <select id ="order" {{on "change" (fn this.sortData ) }}>
      <option value='mnemonico'>Mnemonico cresc</option>
      <option value='-mnemonico'>Mnemonico decresc</option>
      <option value='nome'>Nome cresc</option>
      <option value='-nome'>Nome decresc</option>
      <option value='id'>Id cresc</option>
      <option value='-id'>Id decresc</option>
    </select>
  </div>
</div>
<table class="table table-stripped">
  <thead>
    <th>ID</th>
    <th>Unidade medida saída</th>
    <th>Categoria produto</th>
    <th>Mnemonico</th>
    <th>Nome</th>
    <th>Descrição</th>
    <th colspan="2"></th>
  </thead>
  <tbody>
  {{#each this.model as |tipo_produto|}}
    <tr>
      <td>{{tipo_produto.id}}</td>
      <td>{{tipo_produto.unidade_medida.nome}}</td>
      <td>{{tipo_produto.categoria_produto.nome}}</td>
      <td>{{tipo_produto.mnemonico}}</td>
      <td>{{tipo_produto.nome}}</td>
      <td>{{tipo_produto.descricao}}</td>
      <td>
        <LinkTo @route="tipo_produtos/edit" @model={{tipo_produto}} class="btn btn-primary">Editar</LinkTo>
        {{!- TODO: Do not use `action` Instead, use the `on` modifier and `fn` helper. -}}
        {{!- TODO: ember-template-lint(no-action) -}}
        <button type="button" class="btn btn-primary" {{on "click" (fn this.delete tipo_produto)}}>Excluir</button>
      </td>
    </tr>
  {{/each}}
  </tbody>
</table>
<button type="button" class="btn btn-success" {{on "click" this.pageDown}}>Anterior</button>
<button type="button" class="btn btn-success" {{on "click" this.pageUp}}>Próxima</button>
