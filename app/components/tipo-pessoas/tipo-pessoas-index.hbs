<div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <LinkTo @route="tipo_pessoas/new" class="btn btn-success">Novo tipo pessoa</LinkTo>
    </div>
  </div>
</div>
<div class="form-group">
  <div class="col-sm-offset-2 col-sm-10">
    <label for="order">Ordem:</label>
    <select id ="order" {{on "change" (fn this.sortData ) }}>
      <option value='nome'>Nome cresc</option>
      <option value='-nome'>Nome decresc</option>
      <option value='tipo'>Tipo cresc</option>
      <option value='-tipo'>Tipo decresc</option>
      <option value='id'>Id cresc</option>
      <option value='-id'>Id decresc</option>
    </select>
  </div>
</div>
<table class="table table-stripped">
  <thead>
    <th>Ip</th>
    <th>Nome</th>
    <th>Tipo</th>
    <th colspan="2"></th>
  </thead>
  <tbody>
    {{#each this.model as |tipo_pessoa|}}
      <tr>
        <td>{{tipo_pessoa.id}}</td>
        <td>{{tipo_pessoa.nome}}</td>
        <td>{{tipo_pessoa.tipo}}</td>
        <td>
          <LinkTo @route="tipo_pessoas/edit" @model={{tipo_pessoa}} class="btn btn-primary">Editar</LinkTo>
          <button type="button" class="btn btn-primary" {{on "click" (fn this.delete tipo_pessoa)}}>Excluir</button>
        </td>
      </tr>
    {{else}}
      <tr><td collspan="5">{{this.loading}}</td></tr>
    {{/each}}
  </tbody>
</table>
<button type="button" class="btn btn-success" {{on "click" this.pageDown}}>Anterior</button>
<button type="button" class="btn btn-success" {{on "click" this.pageUp}}>Pr√≥xima</button>
