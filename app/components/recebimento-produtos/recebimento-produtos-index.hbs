<div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <LinkTo @route="recebimento_produtos/new" class="btn btn-success">Novo recebimento pedidos</LinkTo>
    </div>
  </div>
</div>
<div class="form-group">
  <div class="col-sm-offset-2 col-sm-10">
    <label for="order">Ordem:</label>
    <select id ="order" {{on "change" (fn this.sortData ) }}>
      <option value='numero_nf'>Numero cresc</option>
      <option value='-numero_nf'>Numero decresc</option>
      <option value='id'>Id cresc</option>
      <option value='-id'>Id decresc</option>
    </select>
  </div>
</div>
<table class="table table-stripped">
  <thead>
    <th>Id</th>
    <th>Númeno Nf</th>
    <th>Observação</th>
    <th colspan="2"></th>
  </thead>
  <tbody>
    {{#each this.model as |recebimento_produto|}}
      <tr>
        <td>{{recebimento_produto.id}}</td>
        <td>{{recebimento_produto.numero_nf}}</td>
        <td>{{recebimento_produto.observacoes}}</td>
        <td>
          <LinkTo @route="recebimento_produtos/edit" @model={{recebimento_produto}} class="btn btn-primary">Editar</LinkTo>
          <button type="button" class="btn btn-primary" {{on "click" (fn this.delete recebimento_produto)}}>Excluir</button>
        </td>
      </tr>
    {{else}}
      <tr><td collspan="5">{{this.loading}}</td></tr>
    {{/each}}
  </tbody>
</table>
<button type="button" class="btn btn-success" {{on "click" this.pageDown}}>Anterior</button>
<button type="button" class="btn btn-success" {{on "click" this.pageUp}}>Próxima</button>
