{{#if @model}}
<div class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 control-label">Quantidade:</label>
    <div class="col-sm-6">
      <Input @type="text" @value={{@model.quantidade}} class="form-control" placeholder="Quantidade" />
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Observação:</label>
    <div class="col-sm-6">
      <Input @type="text" @value={{@model.observacao}} class="form-control" />
    </div>
    </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Classificação:</label>
    <div class="col-sm-6">
      <Input @type="text" @value={{@model.classificacao}} class="form-control" placeholder="Classificação" />
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Situação:</label>
    <div class="col-sm-6">
      <Input @type="text" @value={{@model.situacao}} class="form-control" placeholder="Situação" />
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-success" {{on "click" (fn this.save @model)}}>
        Salvar
      </button>
    </div>
  </div>
</div>
{{else}}
Regsitro não Encontrado
{{/if}}
