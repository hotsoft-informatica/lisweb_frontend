<div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <LinkTo @route="pedidos/new" class="btn btn-success">Novo pedido</LinkTo>
    </div>
  </div>
</div>
<div class="form-group">
  <div class="col-sm-offset-2 col-sm-10">
    <label for="order">Ordem:</label>
    <select id ="order" {{on "change" (fn this.sortData ) }}>
      <option value='status'>Status cresc</option>
      <option value='-status'>Status decresc</option>
      <option value='id'>Id cresc</option>
      <option value='-id'>Id decresc</option>
    </select>
  </div>
</div>
<table class="table table-stripped">
  <thead>
    <th>Id</th>
    <th>Status</th>
    <th>Observação</th>
    <th colspan="2"></th>
  </thead>
  <tbody>
    {{#each this.model as |pedido|}}
      <tr>
        <td>{{pedido.id}}</td>
        <td>{{pedido.status}}</td>
        <td>{{pedido.observacao}}</td>
        <td>
          <LinkTo @route="pedidos/edit" @model={{pedido}} class="btn btn-primary">Editar</LinkTo>
          <button type="button" class="btn btn-primary" {{on "click" (fn this.delete pedido)}}>Excluir</button>
        </td>
      </tr>
    {{else}}
      <tr><td collspan="5">{{this.loading}}</td></tr>
    {{/each}}
  </tbody>
</table>
<button type="button" class="btn btn-success" {{on "click" this.pageDown}}>Anterior</button>
<button type="button" class="btn btn-success" {{on "click" this.pageUp}}>Próxima</button>
